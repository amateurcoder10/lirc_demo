obj-m		:= lirc_new.o
KDIR  		:= /lib/modules/$(shell uname -r)/build
PWD			:= $(shell pwd)

default:
	make -C $(KDIR) M=$(PWD) INSTALL_MOD_DIR=kernel/lib/ modules_install 

	
modules:
	make -C $(KERN_SRC) M=$(PWD) modules

install:
	make -C $(KERN_SRC) M=$(PWD) modules_install
	depmod -a

clean:
	make -C $(KERN_SRC) M=$(PWD) clean
